tsx// src/components/chat/MobileOptimizedInput.tsx

'use client';

import React, { useState, useRef, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { 
  Send, 
  Plus, 
  Lightbulb, 
  Sparkles,
  X,
  Mic,
  Image as ImageIcon,
  Settings,
  History
} from 'lucide-react';
import { cn } from '@/lib/utils';
import { useUnifiedStore } from '@/store';

interface MobileOptimizedInputProps {
  onSendMessage: (message: string) => void;
  onShowSuggestions: () => void;
  onEnhanceText: () => void;
  className?: string;
}

export const MobileOptimizedInput: React.FC<MobileOptimizedInputProps> = ({
  onSendMessage,
  onShowSuggestions,
  onEnhanceText,
  className
}) => {
  const [message, setMessage] = useState('');
  const [showActionMenu, setShowActionMenu] = useState(false);
  const [isFocused, setIsFocused] = useState(false);
  const textareaRef = useRef<HTMLTextAreaElement>(null);
  const { ui } = useUnifiedStore();

  // ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã®æœ‰ç„¡ã§ãƒœã‚¿ãƒ³ã‚’åˆ‡ã‚Šæ›¿ãˆ
  const hasMessage = message.trim().length > 0;

  // è‡ªå‹•é«˜ã•èª¿æ•´
  useEffect(() => {
    if (textareaRef.current) {
      textareaRef.current.style.height = 'auto';
      textareaRef.current.style.height = `${Math.min(textareaRef.current.scrollHeight, 120)}px`;
    }
  }, [message]);

  const handleSend = () => {
    if (hasMessage) {
      onSendMessage(message);
      setMessage('');
      textareaRef.current?.blur();
    }
  };

  const handleKeyDown = (e: React.KeyboardEvent) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      handleSend();
    }
  };

  return (
    <>
      {/* ãƒ¡ã‚¤ãƒ³å…¥åŠ›ã‚¨ãƒªã‚¢ */}
      <div className={cn(
        'relative flex items-end gap-2 p-3',
        'bg-slate-900/50 backdrop-blur-xl',
        'border-t border-white/10',
        className
      )}>
        {/* å·¦å´ãƒœã‚¿ãƒ³ï¼ˆå‹•çš„åˆ‡ã‚Šæ›¿ãˆï¼‰ */}
        <motion.div
          key={hasMessage ? 'enhance' : 'suggest'}
          initial={{ scale: 0.8, opacity: 0 }}
          animate={{ scale: 1, opacity: 1 }}
          exit={{ scale: 0.8, opacity: 0 }}
          transition={{ duration: 0.2 }}
        >
          {hasMessage ? (
            <motion.button
              whileHover={{ scale: 1.05 }}
              whileTap={{ scale: 0.95 }}
              onClick={onEnhanceText}
              className="p-3 bg-gradient-to-r from-purple-500/20 to-pink-500/20 rounded-xl border border-purple-400/30"
              title="æ–‡ç« å¼·åŒ–"
            >
              <Sparkles className="w-5 h-5 text-purple-400" />
            </motion.button>
          ) : (
            <motion.button
              whileHover={{ scale: 1.05 }}
              whileTap={{ scale: 0.95 }}
              onClick={onShowSuggestions}
              className="p-3 bg-gradient-to-r from-yellow-500/20 to-orange-500/20 rounded-xl border border-yellow-400/30"
              title="è¿”ä¿¡ææ¡ˆ"
            >
              <Lightbulb className="w-5 h-5 text-yellow-400" />
            </motion.button>
          )}
        </motion.div>

        {/* ãƒ†ã‚­ã‚¹ãƒˆå…¥åŠ›æ¬„ */}
        <div className="flex-1 relative">
          <textarea
            ref={textareaRef}
            value={message}
            onChange={(e) => setMessage(e.target.value)}
            onKeyDown={handleKeyDown}
            onFocus={() => setIsFocused(true)}
            onBlur={() => setIsFocused(false)}
            placeholder="ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’å…¥åŠ›..."
            className={cn(
              'w-full px-4 py-3 pr-12',
              'bg-white/5 backdrop-blur-sm rounded-xl',
              'text-white placeholder-white/30',
              'border border-white/10',
              'resize-none outline-none',
              'transition-all duration-200',
              isFocused && 'border-purple-400/50 bg-white/10'
            )}
            rows={1}
            style={{ minHeight: '48px', maxHeight: '120px' }}
          />
          
          {/* æ–‡å­—æ•°ã‚«ã‚¦ãƒ³ã‚¿ãƒ¼ */}
          {message.length > 100 && (
            <div className="absolute bottom-1 right-12 text-xs text-white/30">
              {message.length}
            </div>
          )}
        </div>

        {/* å³å´ãƒœã‚¿ãƒ³ï¼ˆå‹•çš„åˆ‡ã‚Šæ›¿ãˆï¼‰ */}
        <motion.div
          key={hasMessage ? 'send' : 'menu'}
          initial={{ scale: 0.8, opacity: 0 }}
          animate={{ scale: 1, opacity: 1 }}
          exit={{ scale: 0.8, opacity: 0 }}
          transition={{ duration: 0.2 }}
        >
          {hasMessage ? (
            <motion.button
              whileHover={{ scale: 1.05 }}
              whileTap={{ scale: 0.95 }}
              onClick={handleSend}
              disabled={ui.animations.message_sending}
              className={cn(
                'p-3 rounded-xl',
                'bg-gradient-to-r from-blue-500 to-cyan-500',
                'text-white shadow-lg',
                ui.animations.message_sending && 'opacity-50'
              )}
            >
              {ui.animations.message_sending ? (
                <div className="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin" />
              ) : (
                <Send className="w-5 h-5" />
              )}
            </motion.button>
          ) : (
            <motion.button
              whileHover={{ scale: 1.05 }}
              whileTap={{ scale: 0.95 }}
              onClick={() => setShowActionMenu(true)}
              className="p-3 bg-white/10 rounded-xl border border-white/20"
            >
              <Plus className="w-5 h-5 text-white/70" />
            </motion.button>
          )}
        </motion.div>
      </div>

      {/* ã‚¢ã‚¯ã‚·ãƒ§ãƒ³ãƒ¡ãƒ‹ãƒ¥ãƒ¼ï¼ˆãƒœãƒˆãƒ ã‚·ãƒ¼ãƒˆï¼‰ */}
      <AnimatePresence>
        {showActionMenu && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 bg-black/50 z-50"
            onClick={() => setShowActionMenu(false)}
          >
            <motion.div
              initial={{ y: '100%' }}
              animate={{ y: 0 }}
              exit={{ y: '100%' }}
              transition={{ type: 'spring', damping: 25 }}
              className="absolute bottom-0 left-0 right-0 bg-slate-900 rounded-t-3xl"
              onClick={(e) => e.stopPropagation()}
            >
              <ActionMenu onClose={() => setShowActionMenu(false)} />
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>
    </>
  );
};

// ã‚¢ã‚¯ã‚·ãƒ§ãƒ³ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã‚³ãƒ³ãƒãƒ¼ãƒãƒ³ãƒˆ
const ActionMenu: React.FC<{ onClose: () => void }> = ({ onClose }) => {
  const { ui } = useUnifiedStore();

  const menuItems = [
    { icon: ImageIcon, label: 'ç”»åƒã‚’é€ä¿¡', action: () => {} },
    { icon: Mic, label: 'éŸ³å£°å…¥åŠ›', action: () => {} },
    { icon: History, label: 'ãƒãƒ£ãƒƒãƒˆå±¥æ­´', action: () => ui.openModal('chat_history') },
    { icon: Settings, label: 'è¨­å®š', action: () => ui.openModal('settings') },
  ];

  return (
    <div className="p-6">
      {/* ãƒãƒ³ãƒ‰ãƒ« */}
      <div className="w-12 h-1 bg-white/20 rounded-full mx-auto mb-6" />
      
      {/* ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã‚¢ã‚¤ãƒ†ãƒ  */}
      <div className="grid grid-cols-2 gap-4">
        {menuItems.map((item, index) => (
          <motion.button
            key={index}
            whileHover={{ scale: 1.02 }}
            whileTap={{ scale: 0.98 }}
            onClick={() => {
              item.action();
              onClose();
            }}
            className="flex flex-col items-center gap-3 p-4 bg-white/5 rounded-2xl hover:bg-white/10 transition-colors"
          >
            <div className="p-3 bg-gradient-to-br from-purple-500/20 to-pink-500/20 rounded-xl">
              <item.icon className="w-6 h-6 text-purple-400" />
            </div>
            <span className="text-sm text-white/70">{item.label}</span>
          </motion.button>
        ))}
      </div>

      {/* é–‰ã˜ã‚‹ãƒœã‚¿ãƒ³ */}
      <button
        onClick={onClose}
        className="w-full mt-6 p-3 bg-white/5 rounded-xl text-white/50 hover:bg-white/10 transition-colors"
      >
        ã‚­ãƒ£ãƒ³ã‚»ãƒ«
      </button>
    </div>
  );
};
2ï¸âƒ£ ã‚­ãƒ£ãƒ©ã‚¯ã‚¿ãƒ¼ã‚«ãƒ¼ãƒ‰ã‚³ãƒ³ãƒãƒ¼ãƒãƒ³ãƒˆ
tsx// src/components/character/CharacterCard.tsx

'use client';

import React, { useState } from 'react';
import { motion } from 'framer-motion';
import { Heart, Edit, Check } from 'lucide-react';
import { Character } from '@/types/core/character.types';
import { cn } from '@/lib/utils';

interface CharacterCardProps {
  character: Character;
  isSelected?: boolean;
  onSelect: (character: Character) => void;
  onEdit: (character: Character) => void;
  className?: string;
}

export const CharacterCard: React.FC<CharacterCardProps> = ({
  character,
  isSelected = false,
  onSelect,
  onEdit,
  className
}) => {
  const [isFavorite, setIsFavorite] = useState(false);
  const [imageLoaded, setImageLoaded] = useState(false);

  return (
    <motion.div
      whileHover={{ y: -4, scale: 1.02 }}
      whileTap={{ scale: 0.98 }}
      className={cn(
        'relative group cursor-pointer',
        className
      )}
    >
      {/* ã‚«ãƒ¼ãƒ‰æœ¬ä½“ */}
      <div
        className={cn(
          'relative overflow-hidden rounded-2xl',
          'bg-gradient-to-br from-purple-900/20 to-pink-900/20',
          'backdrop-blur-xl border',
          isSelected 
            ? 'border-purple-400 shadow-[0_0_30px_rgba(168,85,247,0.3)]' 
            : 'border-white/10 hover:border-purple-400/50',
          'transition-all duration-300'
        )}
      >
        {/* èƒŒæ™¯ç”»åƒ */}
        {character.appearance.background_url && (
          <div className="absolute inset-0 opacity-30">
            <img
              src={character.appearance.background_url}
              alt=""
              className="w-full h-full object-cover"
              onLoad={() => setImageLoaded(true)}
            />
            <div className="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/50 to-transparent" />
          </div>
        )}

        {/* ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ */}
        <div className="relative p-4">
          {/* ãƒ˜ãƒƒãƒ€ãƒ¼éƒ¨åˆ† */}
          <div className="flex items-start gap-3 mb-3">
            {/* ã‚¢ãƒã‚¿ãƒ¼ */}
            <motion.div
              whileHover={{ scale: 1.1, rotate: 5 }}
              className="relative flex-shrink-0"
            >
              <div className="w-16 h-16 rounded-full overflow-hidden border-2 border-purple-400/50 shadow-xl">
                {character.appearance.avatar_url ? (
                  <img
                    src={character.appearance.avatar_url}
                    alt={character.identity.name}
                    className="w-full h-full object-cover"
                  />
                ) : (
                  <div className="w-full h-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
                    <span className="text-2xl font-bold text-white">
                      {character.identity.name[0]}
                    </span>
                  </div>
                )}
              </div>
              
              {/* é¸æŠãƒã‚§ãƒƒã‚¯ãƒãƒ¼ã‚¯ */}
              {isSelected && (
                <motion.div
                  initial={{ scale: 0 }}
                  animate={{ scale: 1 }}
                  className="absolute -bottom-1 -right-1 w-6 h-6 bg-green-500 rounded-full flex items-center justify-center"
                >
                  <Check className="w-4 h-4 text-white" />
                </motion.div>
              )}
            </motion.div>

            {/* åå‰ã¨è·æ¥­ */}
            <div className="flex-1 min-w-0">
              <h3 className="font-bold text-white text-lg truncate">
                {character.identity.name}
              </h3>
              <p className="text-sm text-purple-300/70 truncate">
                {character.identity.occupation}
              </p>
            </div>

            {/* ãŠæ°—ã«å…¥ã‚Šãƒœã‚¿ãƒ³ */}
            <motion.button
              whileHover={{ scale: 1.2 }}
              whileTap={{ scale: 0.9 }}
              onClick={(e) => {
                e.stopPropagation();
                setIsFavorite(!isFavorite);
              }}
              className="p-2 rounded-lg hover:bg-white/10 transition-colors"
            >
              <Heart 
                className={cn(
                  'w-5 h-5 transition-colors',
                  isFavorite 
                    ? 'text-red-500 fill-red-500' 
                    : 'text-white/50 hover:text-red-400'
                )}
              />
            </motion.button>
          </div>

          {/* ã‚­ãƒ£ãƒƒãƒãƒ•ãƒ¬ãƒ¼ã‚º */}
          <div className="mb-3">
            <p className="text-sm text-white/80 italic line-clamp-2">
              "{character.identity.catchphrase}"
            </p>
          </div>

          {/* ã‚¿ã‚° */}
          <div className="flex flex-wrap gap-1 mb-4">
            {character.metadata.tags.slice(0, 3).map((tag, index) => (
              <span
                key={index}
                className="px-2 py-0.5 text-xs bg-purple-500/20 text-purple-300 rounded-full"
              >
                #{tag}
              </span>
            ))}
            {character.metadata.tags.length > 3 && (
              <span className="px-2 py-0.5 text-xs text-white/40">
                +{character.metadata.tags.length - 3}
              </span>
            )}
          </div>

          {/* ã‚¢ã‚¯ã‚·ãƒ§ãƒ³ãƒœã‚¿ãƒ³ */}
          <div className="flex gap-2">
            <motion.button
              whileHover={{ scale: 1.02 }}
              whileTap={{ scale: 0.98 }}
              onClick={() => onSelect(character)}
              className={cn(
                'flex-1 py-2 px-4 rounded-lg font-medium transition-all',
                isSelected
                  ? 'bg-purple-500 text-white'
                  : 'bg-white/10 text-white/70 hover:bg-white/20'
              )}
            >
              {isSelected ? 'é¸æŠä¸­' : 'é¸æŠ'}
            </motion.button>
            
            <motion.button
              whileHover={{ scale: 1.02 }}
              whileTap={{ scale: 0.98 }}
              onClick={(e) => {
                e.stopPropagation();
                onEdit(character);
              }}
              className="p-2 bg-white/10 rounded-lg hover:bg-white/20 transition-colors"
            >
              <Edit className="w-4 h-4 text-white/70" />
            </motion.button>
          </div>
        </div>

        {/* ä½¿ç”¨çµ±è¨ˆï¼ˆãƒ›ãƒãƒ¼æ™‚è¡¨ç¤ºï¼‰ */}
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          whileHover={{ opacity: 1, y: 0 }}
          className="absolute bottom-0 left-0 right-0 p-2 bg-black/70 backdrop-blur-sm opacity-0 group-hover:opacity-100 transition-opacity"
        >
          <div className="flex justify-around text-xs text-white/60">
            <span>ä½¿ç”¨: {character.statistics.usage_count}å›</span>
            <span>å¹³å‡: {Math.round(character.statistics.average_session_length)}åˆ†</span>
          </div>
        </motion.div>
      </div>
    </motion.div>
  );
};
