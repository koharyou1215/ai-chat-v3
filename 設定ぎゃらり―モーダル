'use client';

import React, { useState } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { 
  X, 
  Palette, 
  Volume2, 
  Cpu, 
  Database,
  Shield,
  Bell,
  Globe,
  Code,
  Save
} from 'lucide-react';
import { cn } from '@/lib/utils';

interface SettingsModalProps {
  isOpen: boolean;
  onClose: () => void;
}

export const SettingsModal: React.FC<SettingsModalProps> = ({
  isOpen,
  onClose
}) => {
  const [activeTab, setActiveTab] = useState('appearance');
  const [settings, setSettings] = useState({
    // å¤–è¦³è¨­å®š
    theme: 'dark',
    accentColor: '#8b5cf6',
    fontSize: 'medium',
    animations: true,
    
    // éŸ³å£°è¨­å®š
    voiceEnabled: true,
    voiceProvider: 'voicevox',
    voiceSpeed: 1.0,
    autoPlay: false,
    
    // AIè¨­å®š
    model: 'gemini-2.5-pro',
    temperature: 0.7,
    maxTokens: 2000,
    streamResponse: true,
    
    // ãƒ‡ãƒ¼ã‚¿è¨­å®š
    autoSave: true,
    saveInterval: 30,
    enableBackup: true,
    compressionEnabled: true,
    
    // ãƒ—ãƒ©ã‚¤ãƒã‚·ãƒ¼è¨­å®š
    analytics: false,
    crashReports: false,
    secureMode: false,
    
    // é€šçŸ¥è¨­å®š
    notifications: true,
    soundEffects: true,
    vibration: true,
    
    // è¨€èªãƒ»åœ°åŸŸ
    language: 'ja',
    timezone: 'Asia/Tokyo',
    dateFormat: 'YYYY/MM/DD',
    
    // é–‹ç™ºè€…è¨­å®š
    debugMode: false,
    showTokenCount: false,
    experimentalFeatures: false,
  });

  const tabs = [
    { id: 'appearance', label: 'å¤–è¦³', icon: Palette },
    { id: 'voice', label: 'éŸ³å£°', icon: Volume2 },
    { id: 'ai', label: 'AI', icon: Cpu },
    { id: 'data', label: 'ãƒ‡ãƒ¼ã‚¿', icon: Database },
    { id: 'privacy', label: 'ãƒ—ãƒ©ã‚¤ãƒã‚·ãƒ¼', icon: Shield },
    { id: 'notifications', label: 'é€šçŸ¥', icon: Bell },
    { id: 'language', label: 'è¨€èªãƒ»åœ°åŸŸ', icon: Globe },
    { id: 'developer', label: 'é–‹ç™ºè€…', icon: Code },
  ];

  const handleSave = () => {
    // è¨­å®šã‚’ä¿å­˜
    localStorage.setItem('app_settings', JSON.stringify(settings));
    onClose();
  };

  return (
    <AnimatePresence>
      {isOpen && (
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          exit={{ opacity: 0 }}
          className="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
          onClick={onClose}
        >
          <motion.div
            initial={{ scale: 0.9, opacity: 0 }}
            animate={{ scale: 1, opacity: 1 }}
            exit={{ scale: 0.9, opacity: 0 }}
            onClick={(e) => e.stopPropagation()}
            className="w-full max-w-4xl max-h-[80vh] bg-slate-900 rounded-2xl shadow-2xl overflow-hidden flex flex-col"
          >
            {/* ãƒ˜ãƒƒãƒ€ãƒ¼ */}
            <div className="px-6 py-4 border-b border-white/10 flex items-center justify-between">
              <h2 className="text-xl font-bold text-white">è¨­å®š</h2>
              <button
                onClick={onClose}
                className="p-2 hover:bg-white/10 rounded-lg transition-colors"
              >
                <X className="w-5 h-5 text-white/70" />
              </button>
            </div>

            {/* ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ */}
            <div className="flex-1 flex overflow-hidden">
              {/* ã‚µã‚¤ãƒ‰ãƒãƒ¼ */}
              <div className="w-48 border-r border-white/10 p-4">
                <nav className="space-y-1">
                  {tabs.map((tab) => (
                    <button
                      key={tab.id}
                      onClick={() => setActiveTab(tab.id)}
                      className={cn(
                        'w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors',
                        activeTab === tab.id
                          ? 'bg-purple-500/20 text-purple-400'
                          : 'text-white/60 hover:bg-white/5 hover:text-white/80'
                      )}
                    >
                      <tab.icon className="w-4 h-4" />
                      <span className="text-sm">{tab.label}</span>
                    </button>
                  ))}
                </nav>
              </div>

              {/* è¨­å®šãƒ‘ãƒãƒ« */}
              <div className="flex-1 p-6 overflow-y-auto">
                <SettingsPanel
                  activeTab={activeTab}
                  settings={settings}
                  onChange={setSettings}
                />
              </div>
            </div>

            {/* ãƒ•ãƒƒã‚¿ãƒ¼ */}
            <div className="px-6 py-4 border-t border-white/10 flex justify-end gap-3">
              <button
                onClick={onClose}
                className="px-4 py-2 text-white/60 hover:text-white/80 transition-colors"
              >
                ã‚­ãƒ£ãƒ³ã‚»ãƒ«
              </button>
              <button
                onClick={handleSave}
                className="px-6 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-lg transition-colors flex items-center gap-2"
              >
                <Save className="w-4 h-4" />
                ä¿å­˜
              </button>
            </div>
          </motion.div>
        </motion.div>
      )}
    </AnimatePresence>
  );
};

